{
    "name": "somnambulist/form-request-bundle",
    "type": "symfony-bundle",
    "description": "Adds Laravel like form requests for Symfony; based on adamsafr/form-request-bundle",
    "keywords": [
        "form request",
        "symfony"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dave Redfern",
            "email": "info@somnambulist.tech"
        }
    ],
    "require": {
        "php": ">=8.0",
        "rakit/validation": "^1.4",
        "symfony/framework-bundle": "^5.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~9.5",
        "ramsey/uuid": "~4.1",
        "symfony/browser-kit": "~5.3",
        "symfony/security-bundle": "^5.3",
        "symfony/stopwatch": "~5.3",
        "symfony/var-dumper": "~5.3",
        "symfony/yaml": "~5.3"
    },
    "autoload": {
        "psr-4": {
            "Somnambulist\\Bundles\\FormRequestBundle\\": "src/"
        },
        "files": [
            "src/Resources/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Somnambulist\\Bundles\\FormRequestBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    }
}
