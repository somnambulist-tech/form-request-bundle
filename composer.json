{
    "name": "somnambulist/form-request-bundle",
    "type": "symfony-bundle",
    "description": "Adds Laravel like form requests for Symfony; based on adamsafr/form-request-bundle",
    "keywords": [
        "form request",
        "symfony"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dave Redfern",
            "email": "info@somnambulist.tech"
        }
    ],
    "require": {
        "php": ">=8.1",
        "somnambulist/validation": "^1.4",
        "symfony/framework-bundle": "^6.4|^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "ramsey/uuid": "^4.7",
        "symfony/browser-kit": "^6.4",
        "symfony/security-bundle": "^6.4",
        "symfony/stopwatch": "^6.4",
        "symfony/var-dumper": "^6.4",
        "symfony/yaml": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Somnambulist\\Bundles\\FormRequestBundle\\": "src/"
        },
        "files": [
            "src/Resources/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Somnambulist\\Bundles\\FormRequestBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist"
    }
}
